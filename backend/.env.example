# Database configuration
DATABASE_URL=postgres://oriontel:oriontel@localhost:5432/oriontel

# JWT configuration
JWT_SECRET=your-secret-key-here
JWT_EXPIRATION_HOURS=24

# Server configuration
HOST=127.0.0.1
PORT=8080
RUST_LOG=info

# Rate limiting
RATE_LIMIT_AUTHENTICATED=100
RATE_LIMIT_UNAUTHENTICATED=20

# CORS configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# File storage
RECORDING_PATH=/var/lib/oriontel/recordings
UPLOAD_PATH=/var/lib/oriontel/uploads

# PBX configuration
PBX_HOST=localhost
PBX_PORT=5060
PBX_USERNAME=admin
PBX_PASSWORD=secret

# Monitoring configuration
METRICS_COLLECTION_INTERVAL=60
METRICS_RETENTION_DAYS=30

# Email configuration (for notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your-username
SMTP_PASSWORD=your-password
SMTP_FROM_ADDRESS=noreply@example.com

# Backup configuration
BACKUP_PATH=/var/lib/oriontel/backups
BACKUP_RETENTION_DAYS=7

# Security
ENCRYPTION_KEY=your-encryption-key-here
PASSWORD_SALT=your-password-salt-here
MIN_PASSWORD_LENGTH=8

# Feature flags
ENABLE_CALL_RECORDING=true
ENABLE_VOICEMAIL=true
ENABLE_FAX=true
ENABLE_VIDEO_CALLS=false 